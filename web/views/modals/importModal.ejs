<!-- IMPORT MODAL -->
<div class="modal hide fade" id="redisImportModal">
  <form action="#" class="form-horizontal">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal">Ã—</button>
      <h3>Import data</h3>
    </div>
    <div class="modal-body">
      <div class="control-group">
        <label class="control-label" for="connectionExportField">Connection</label>
        <div class="controls">
          <select name="connection">
            <% var connections = getConnections(); %>
            <% connections.forEach(function(connection, index) {%>
            <% if (index == 0) { %>
            <option value="<%=connection.host%>:<%=connection.port%>:<%=connection.selected_db%>"><%=connection.host%>:<%=connection.port%>:<%=connection.selected_db%></option>
            <% } else { %>
            <option value="<%=connection.host%>:<%=connection.port%>:<%=connection.selected_db%>"><%=connection.host%>:<%=connection.port%>:<%=connection.selected_db%></option>
            <% }}); %>
          </select>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="importData">Import data</label>
        <div class="controls">
          <textarea name="data" id="importData"></textarea>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="flushDb">Flush DB</label>
        <div class="controls">
          <input type="checkbox" name="clear" value="1" id="flushDb" checked="checked" />
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <a href="#" class="btn" data-dismiss="modal">Close</a>
      <input type="submit" class="btn btn-primary" value="Import">
    </div>
  </form>
</div>
<!-- /IMPORT MODAL -->